                  </div>
                </div>
            <center>
                <h1 class="display-4">Ingresa tus credenciales <%= id %></h1>
                
            </center>
        </div>
                <section class="cont-panda">
                    <div class="contfp">
                    <div class="panda">
                        <div class="ear"></div>
                        <div class="face">
                            <div class="eye-shade"></div>
                            <div class="eye-white">
                                <div class="eye-ball"></div>
                            </div>
                            <div class="eye-shade rgt"></div>
                            <div class="eye-white rgt">
                                <div class="eye-ball"></div>
                            </div>
                            <div class="nose"></div>
                            <div class="mouth"></div>
                        </div>
                        <div class="body"> </div>
                        <div class="foot">
                            <div class="finger"></div>
                        </div>
                        <div class="foot rgt">
                            <div class="finger"></div>
                        </div>
                        </div>
                    </div>
                <form action="/auth" method="POST">
                    <div class="hand"></div>
                    <div class="hand rgt"></div>
                    <h1>Iniciar</h1>
                    <div class="form-group">
                        <input class="form-control" name="phone" />
                        <label for="phone" class="form-label">numero de telefono </label>
                    </div>
                    <div class="form-group">
                        <input id="password" type="password" class="form-control" name="pass" />
                        <label for="pass" class="form-label">Password</label>
                    <% if(err != "init") { %>
                        <div class="<%= clas %>" >
                            <p style="font-size: medium; font-weight: bold;" ><%= err %></p>
                        </div>
                    <% } %>
                    <center>
                        <button type="submit" class="btn btnM btn-dark">Iniciar Sesión</button>
                    </center>
                </form>
                </section>  
        
    <% } %>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.js'></script>
    <script src="https://unpkg.com/ionicons@4.5.10-0/dist/ionicons.js"></script>
    <script>
        $('#password').focusin(function(){
    $('form').addClass('up')
  });
  $('#password').focusout(function(){
    $('form').removeClass('up')
  });
  $('.btn').click(function(){
    $('form').addClass('wrong-entry');
      setTimeout(function(){ 
         $('form').removeClass('wrong-entry');
       },3000 );
  });
    </script>

<script src="./js/LogOut.js"></script>

</body>
</html>